# Backup of improved .htaccess configuration
# Copy this to .htaccess if needed

# Enable CORS headers
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept"
</IfModule>

# Custom 404 error page
ErrorDocument 404 /404.html

# URL Rewriting for clean URLs
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Force trailing slash removal for consistency
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{THE_REQUEST} \s/+([^?\s]*?)/?(\?[^\s]*)?\s [NC]
    RewriteRule ^(.*)/?$ /$1 [R=301,L]
    
    # Remove .html extension from URLs (external redirect)
    RewriteCond %{THE_REQUEST} \s/+([^?\s]*?)\.html[\s?] [NC]
    RewriteRule ^ /%1? [R=301,L]
    
    # Internal rewrite: serve .html files for clean URLs
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.html -f
    RewriteRule ^([^./]+)/?$ $1.html [L]
    
    # Specific rules for main pages (fallback)
    RewriteRule ^ai-companions/?$ ai-companions.html [L]
    RewriteRule ^telegram-bots/?$ telegram-bots.html [L]
    
    # Handle images with placeholder
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^images/(.*)$ /images/placeholder.php?name=$1 [L]
</IfModule>

# Alternative fallback if mod_rewrite is not available
<IfModule !mod_rewrite.c>
    # Redirect to .html versions if mod_rewrite is not available
    RedirectMatch 301 ^/ai-companions$ /ai-companions.html
    RedirectMatch 301 ^/telegram-bots$ /telegram-bots.html
</IfModule>